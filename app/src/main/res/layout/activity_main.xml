<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Activities.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Please Fill in your Details"
                    android:textColor="@color/colorPrimaryDark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/imgBtn1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/round_outline"
                            android:gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Select a profile photo"
                            android:textColor="@color/colorPrimaryDark" />

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:scaleType="centerCrop" />


                    </LinearLayout>


                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/borderroundcorner"
                        android:hint="Name"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColorHint="@android:color/darker_gray" />

                    <EditText
                        android:id="@+id/etAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/borderroundcorner"
                        android:hint="Age"
                        android:inputType="number"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColorHint="@android:color/darker_gray" />

                    <EditText
                        android:id="@+id/etHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/borderroundcorner"
                        android:hint="Height in cm"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColorHint="@android:color/darker_gray" />

                    <EditText
                        android:id="@+id/etIQ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/borderroundcorner"
                        android:hint="IQ Results"
                        android:inputType="number"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColorHint="@android:color/darker_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Marital Status"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimaryDark" />

                        <RadioGroup
                            android:id="@+id/radioGroupStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp">

                            <RadioButton
                                android:id="@+id/radioSingle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Single" />

                            <RadioButton
                                android:id="@+id/radioMarried"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Married" />

                            <RadioButton
                                android:id="@+id/radioWidowed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Widowed" />

                            <RadioButton
                                android:id="@+id/radioDivorced"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="divorced" />

                            <RadioButton
                                android:id="@+id/radioSeparated"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Separated" />

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/white"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Additional Information"
                            android:textColor="@color/colorPrimaryDark" />

                        <RadioGroup
                            android:id="@+id/radioGroupGender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/radioMale"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Male" />

                            <RadioButton
                                android:id="@+id/radioFemale"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Female" />

                        </RadioGroup>


                    </LinearLayout>

                    <Button
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="7dp"
                        android:id="@+id/getcoordinates"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAllCaps="false"
                        android:drawableStart="@drawable/ic_action_place"
                        android:background="@drawable/newbutton"
                        android:text="Get coordinates"
                        android:textColor="@android:color/white" />


                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@android:color/white"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/layoutpointview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:orientation="vertical">

                        <TextView
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your Coordinates"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimaryDark" />

                        <LinearLayout
                            android:id="@+id/layoutpoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:orientation="horizontal"
                            android:padding="7dp">


                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:text="Latitude:"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


                            <TextView
                                android:id="@+id/tvlatitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:orientation="horizontal"
                            android:padding="7dp">


                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text="Longititude:"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


                            <TextView
                                android:id="@+id/tvlongitude"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="right"

                                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSave"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@color/colorSave"
            android:text="Save Data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>